<%- is_expanded = true if is_expanded.nil? -%>

<article class="entry h-entry" data-entry-type="note">
  <%- if note.title.present? -%>
    <h2><%= note.title %></h2>
  <%- end -%>
  
  <div class="entry-excerpt p-summary">
    <p><%= note.body.html_safe %></p>
  </div>


  <%- if note.published_at? -%>
    <footer class="entry-footer">
      <p>
        Published on <time class="dt-published" datetime="<%= note.published_at.to_s(:iso8601) %>">
        <%= raw note.published_at.to_s(:display) %></time>.
        <%= link_to 'Permalink', Rails.application.routes.url_helpers.note_path(note) %>
      </p>
    </footer>
  <%- else -%>
    <%= link_to 'Draft', Rails.application.routes.url_helpers.edit_note_path(note), class: 'draft' %>
  <%- end -%>
</article>