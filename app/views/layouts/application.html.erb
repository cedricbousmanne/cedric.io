<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Clean Blog - Start Bootstrap Theme</title>
    <%= auto_discovery_link_tag :rss, francis_cms.posts_path(format: :rss), title: %{#{francis_cms_config.site_title}: Posts} %>

    <!-- Bootstrap core CSS -->
    <%= stylesheet_link_tag    'application', media: 'all' %>
    
    <!-- Custom fonts for this template -->
    <%= stylesheet_link_tag    'all.min.css', media: 'all' %>
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <%= stylesheet_link_tag    'clean-blog.min.css', media: 'all' %>
    <%= csrf_meta_tags %>

    <%- if Rails.application.config.francis_cms.github_profile -%>
      <link rel="me" href="<%= Rails.application.config.francis_cms.github_profile %>" />
    <%- end -%>
    <%- if Rails.application.config.francis_cms.google_plus_profile -%>
      <link rel="me" href="<%= Rails.application.config.francis_cms.google_plus_profile %>" />
    <%- end -%>
    <%- if Rails.application.config.francis_cms.twitter_profile -%>
      <link rel="me" href="<%= Rails.application.config.francis_cms.twitter_profile %>" />
    <%- end -%>
    <%- if Rails.application.config.francis_cms.facebook_profile -%>
      <link rel="me" href="<%= Rails.application.config.francis_cms.facebook_profile %>" />
    <%- end -%>
    <%- if Rails.application.config.francis_cms.micro_blog_profile -%>
      <link rel="me" href="<%= Rails.application.config.francis_cms.micro_blog_profile %>" />
    <%- end -%>
    <%- if Rails.application.config.francis_cms.instagram_profile -%>
      <link rel="me" href="<%= Rails.application.config.francis_cms.instagram_profile %>" />
    <%- end -%>
    <%- if Rails.application.config.francis_cms.pgp_profile -%>
      <link rel="pgpkey" href="<%= Rails.application.config.francis_cms.pgp_profile %>https://keybase.io/akyrho/pgp_keys.asc?fingerprint=ca38cf177a870454861c6e44f99f755f111716c7" />
    <%- end -%>

    <%- if Rails.application.config.francis_cms.authorization_endpoint -%>
      <link rel="authorization_endpoint" href="<%= Rails.application.config.francis_cms.authorization_endpoint %>">
    <%- end -%>

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand" href="index.html">Cedric.io</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="index.html">Home</a>
            </li>
            <li class="nav-item">
              <%= link_to 'Articles', francis_cms.posts_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Notes', Rails.application.routes.url_helpers.notes_path, class: 'nav-link' %>
            <li class="nav-item">
              <%= link_to 'Liens', francis_cms.links_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Photos', '#', class: 'nav-link' %>
            </li>
            </li>
            <li class="nav-item">
              <%= link_to 'Checkins', Rails.application.routes.url_helpers.checkins_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="contact.html">Contact</a>
            </li>
            <%#= francis_cms_admin_panel if logged_in? %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/assets/home-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <%= yield %>
    </div>

    <hr>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <ul class="list-inline text-center">
              <li class="list-inline-item">
                <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
            </ul>
            <p class="copyright text-muted">Copyright &copy; Your Website 2018</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>

  </body>

</html>
